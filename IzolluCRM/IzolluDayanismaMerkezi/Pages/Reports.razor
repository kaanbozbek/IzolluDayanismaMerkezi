                                <MudText Typo="Typo.h5" Style="color: white;"><strong>@_stats.TotalStudents</strong></MudText>
                            </MudPaper>
                        </MudItem>
                        <MudItem xs="6" md="3">
                            <MudPaper Class="pa-4" Elevation="2" Style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); border-radius: 12px; min-height: 110px; display: flex; flex-direction: column; justify-content: space-between;">
                                <MudText Typo="Typo.body2" Style="color: white;">Burs Alan</MudText>
                                <MudText Typo="Typo.h5" Style="color: white;"><strong>@_stats.ActiveScholarships</strong></MudText>
                            </MudPaper>
                        </MudItem>
                        <MudItem xs="6" md="3">
                            <MudPaper Class="pa-4" Elevation="2" Style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); border-radius: 12px; min-height: 110px; display: flex; flex-direction: column; justify-content: space-between;">
                                <MudText Typo="Typo.body2" Style="color: white;">Taahhüt Toplam Dönem Burs Tutarı</MudText>
                                <MudText Typo="Typo.h6" Style="color: white;"><strong>@_stats.PeriodBursTutari.ToString("N0") ₺</strong></MudText>
                            </MudPaper>
                        </MudItem>
                        <MudItem xs="6" md="3">
                            <MudPaper Class="pa-4" Elevation="2" Style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); border-radius: 12px; min-height: 110px; display: flex; flex-direction: column; justify-content: space-between;">
                                <MudText Typo="Typo.body2" Style="color: white;">Mezun Sayısı</MudText>
                                <MudText Typo="Typo.h5" Style="color: white;"><strong>@_stats.GraduatedCount</strong></MudText>
                            </MudPaper>
                        </MudItem>
                        <MudItem xs="6" md="3">
