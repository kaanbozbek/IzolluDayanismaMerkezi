                            <MudPaper Class="pa-4" Elevation="2" Style="background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%); border-radius: 12px; min-height: 110px; display: flex; flex-direction: column; justify-content: space-between;">
                                <MudText Typo="Typo.body2" Style="color: #333;">Köy Sayısı</MudText>
                                <MudText Typo="Typo.h6" Style="color: #333;"><strong>@_stats.VillageCount</strong></MudText>
                            </MudPaper>
                        </MudItem>
