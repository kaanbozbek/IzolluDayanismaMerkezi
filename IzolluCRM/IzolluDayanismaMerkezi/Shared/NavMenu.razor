                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.Dashboard" 
                    Class="nav-item"
                    ActiveClass="nav-item-active">
            Dashboard
        </MudNavLink>
    </MudNavMenu>

    <!-- ÜYE İŞLEMLERİ -->
