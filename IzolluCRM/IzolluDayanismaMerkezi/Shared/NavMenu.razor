<div class="modern-nav-menu">
    <!-- Logo Section -->
    <div class="nav-logo-section">
        <img src="/izollu-vakfi.png" alt="Logo" class="nav-logo" />
    </div>

    <!-- ANA MENÜ -->
    <div class="nav-section-header">ANA MENÜ</div>
    
    <MudNavMenu Class="mud-nav-modern">
        <MudNavLink Href="/reports" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.Dashboard" 
                    Class="nav-pill"
                    ActiveClass="nav-active">
            Dashboard
        </MudNavLink>
        
        <MudNavLink Href="/students" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.School" 
                    Class="nav-pill"
                    ActiveClass="nav-active">
            Öğrenciler
        </MudNavLink>
        
        <MudNavLink Href="/members" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.People" 
                    Class="nav-pill"
                    ActiveClass="nav-active">
            Üyeler
        </MudNavLink>
    </MudNavMenu>

    <!-- VERİ YÖNETİMİ -->
    <div class="nav-section-header">VERİ YÖNETİMİ</div>
    
    <MudNavMenu Class="mud-nav-modern">
        <MudNavLink Href="/villages" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.LocationCity" 
                    Class="nav-pill"
                    ActiveClass="nav-active">
            Köyler
        </MudNavLink>
        
        <MudNavLink Href="/aids" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.VolunteerActivism" 
                    Class="nav-pill"
                    ActiveClass="nav-active">
            Yardımlar
        </MudNavLink>
        
        <MudNavLink Href="/meetings" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.Event" 
                    Class="nav-pill"
                    ActiveClass="nav-active">
            Toplantılar
        </MudNavLink>
        
        <MudNavLink Href="/excel-import" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.UploadFile" 
                    Class="nav-pill"
                    ActiveClass="nav-active">
            Excel İçe Aktar
        </MudNavLink>
    </MudNavMenu>

    <!-- SİSTEM -->
    <div class="nav-section-header">SİSTEM</div>
    
    <MudNavMenu Class="mud-nav-modern">
        <MudNavLink Href="/activity-logs" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.History" 
                    Class="nav-pill"
                    ActiveClass="nav-active">
            Aktivite Logları
        </MudNavLink>
    </MudNavMenu>

    <!-- User Section at Bottom -->
    <div class="nav-user-section">
        <MudNavLink Href="/settings" 
                    Icon="@Icons.Material.Filled.Settings" 
                    Class="nav-pill-small">
            Ayarlar
        </MudNavLink>
        <div style="cursor: pointer;" class="nav-pill-small" @onclick="HandleLogoutClick">
            <MudIcon Icon="@Icons.Material.Filled.Logout" Class="mr-2" Style="font-size: 18px; color: #ef4444;" />
            <span style="color: #ef4444; font-weight: 500;">Çıkış Yap</span>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback OnLogout { get; set; }

    private async Task HandleLogoutClick()
    {
        await OnLogout.InvokeAsync();
    }
}

<style>
    .modern-nav-menu {
        height: 100%;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
    }
    
    /* Logo Section */
    .nav-logo-section {
        padding: 12px 16px 10px;
        text-align: center;
        border-bottom: 1px solid rgba(0,0,0,0.06);
    }
    
    .nav-logo {
        max-width: 130px;
        height: auto;
    }
    
    /* Section Headers */
    .nav-section-header {
        margin-top: 10px;
        margin-bottom: 2px;
        padding: 0 16px;
        font-size: 10px;
        font-weight: 600;
        letter-spacing: 0.08em;
        color: #9ca3af;
        text-transform: uppercase;
    }
    
    /* Pill-style Navigation Links */
    .mud-nav-modern .nav-pill {
        border-radius: 8px;
        margin: 2px 10px;
        padding: 8px 10px;
        transition: background-color 0.15s ease, color 0.15s ease;
        position: relative;
    }
    
    .mud-nav-modern .nav-pill:hover {
        background-color: #f3f4f6;
    }
    
    /* Active Item with Left Accent Bar */
    .mud-nav-modern .nav-active {
        background-color: #fff7ed;
        color: #f59e0b;
        font-weight: 600;
    }
    
    .mud-nav-modern .nav-active::before {
        content: "";
        position: absolute;
        left: 0;
        top: 8px;
        bottom: 8px;
        width: 3px;
        border-radius: 999px;
        background-color: #f59e0b;
    }
    
    .mud-nav-modern .nav-pill .mud-nav-link-icon-default {
        color: #6b7280;
        font-size: 20px;
    }
    
    .mud-nav-modern .nav-active .mud-nav-link-icon-default {
        color: #f59e0b;
    }
    
    /* User Section at Bottom */
    .nav-user-section {
        margin-top: auto;
        padding: 10px 12px 12px;
        border-top: 1px solid rgba(0,0,0,0.06);
    }
    
    .user-info {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 6px;
        margin-bottom: 2px;
    }
    
    .user-avatar {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff7ed;
        border-radius: 50%;
    }
    
    .user-details {
        flex: 1;
    }
    
    .user-name {
        font-size: 14px;
        font-weight: 600;
        color: #1f2937;
    }
    
    .user-role {
        font-size: 12px;
        color: #9ca3af;
    }
    
    .nav-pill-small {
        border-radius: 8px;
        margin: 2px 0;
        padding: 8px 12px;
        font-size: 13px;
        transition: all 0.15s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .nav-pill-small:hover {
        background-color: #fee2e2;
        transform: translateX(2px);
    }
    
    .nav-pill-small .mud-nav-link-icon-default {
        font-size: 18px;
        color: #6b7280;
    }
</style>