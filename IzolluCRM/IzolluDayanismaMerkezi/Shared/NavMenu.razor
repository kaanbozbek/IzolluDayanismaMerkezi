                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.LocationCity" 
                    Class="nav-item"
                    ActiveClass="nav-item-active">
            Köyler
        </MudNavLink>
        
        <MudNavLink Href="/aids" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.VolunteerActivism" 
                    Class="nav-item"
                    ActiveClass="nav-item-active">
            Yardımlar
        </MudNavLink>
    </MudNavMenu>

    <!-- VERİ YÖNETİMİ -->
    <div class="nav-section-title mt-3">VERİ YÖNETİMİ</div>
    
    <MudNavMenu Dense="true" Class="nav-menu">
        <MudNavLink Href="/meetings" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.Event" 
                    Class="nav-item"
                    ActiveClass="nav-item-active">
            Toplantılar
        </MudNavLink>
        
        <MudNavLink Href="/excel-import" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.UploadFile" 
                    Class="nav-item"
                    ActiveClass="nav-item-active">
            Excel İçe Aktar
        </MudNavLink>
    </MudNavMenu>

    <!-- SİSTEM -->
    <div class="nav-section-title mt-3">SİSTEM</div>
    
    <MudNavMenu Dense="true" Class="nav-menu">
        <MudNavLink Href="/activity-logs" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.History" 
                    Class="nav-item"
                    ActiveClass="nav-item-active">
            Aktivite Logları
        </MudNavLink>
    </MudNavMenu>

    <!-- Footer Section -->
    <div class="nav-footer">
        <MudNavLink Href="/settings" 
                    Icon="@Icons.Material.Filled.Settings" 
                    Class="nav-footer-link"
                    ActiveClass="nav-item-active">
            Ayarlar
        </MudNavLink>
        <div class="nav-footer-link logout-link" @onclick="HandleLogoutClick">
            <MudIcon Icon="@Icons.Material.Filled.Logout" Style="font-size: 20px; margin-right: 0.5rem;" />
            <span>Çıkış Yap</span>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback OnLogout { get; set; }

    private async Task HandleLogoutClick()
    {
        await OnLogout.InvokeAsync();
    }
}

