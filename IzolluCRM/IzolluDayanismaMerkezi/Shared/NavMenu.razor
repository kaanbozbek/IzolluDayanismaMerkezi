<div class="izollu-nav-menu sidebar">
    <!-- Logo Section -->
    <div class="nav-header logo-container">
        <img src="/izollu-vakfi.png" alt="Logo" class="nav-logo" />
    </div>

    <!-- ANA MENÜ -->
    <div class="nav-section-title menu-title">ANA MENÜ</div>
    
    <MudNavMenu Dense="true" Class="nav-menu">
        <MudNavLink Href="/reports" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.Dashboard" 
                    Class="nav-item menu-item"
                    ActiveClass="nav-item-active">
            Dashboard
        </MudNavLink>
    </MudNavMenu>

    <!-- ÜYE İŞLEMLERİ -->
    <div class="nav-section-title menu-title">ÜYE İŞLEMLERİ</div>
    
    <MudNavMenu Dense="true" Class="nav-menu">
        <MudNavLink Href="/students" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.School" 
                    Class="nav-item menu-item"
                    ActiveClass="nav-item-active">
            Öğrenciler
        </MudNavLink>
        
        <MudNavLink Href="/members" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.People" 
                    Class="nav-item menu-item"
                    ActiveClass="nav-item-active">
            Üyeler
        </MudNavLink>
        
        <MudNavLink Href="/villages" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.LocationCity" 
                    Class="nav-item menu-item"
                    ActiveClass="nav-item-active">
            Köyler
        </MudNavLink>
        
        <MudNavLink Href="/aids" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.VolunteerActivism" 
                    Class="nav-item menu-item"
                    ActiveClass="nav-item-active">
            Yardımlar
        </MudNavLink>
    </MudNavMenu>

    <!-- VERİ YÖNETİMİ -->
    <div class="nav-section-title menu-title">VERİ YÖNETİMİ</div>
    
    <MudNavMenu Dense="true" Class="nav-menu">
        <MudNavLink Href="/meetings" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.Event" 
                    Class="nav-item menu-item"
                    ActiveClass="nav-item-active">
            Toplantılar
        </MudNavLink>
        
        <MudNavLink Href="/excel-import" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.UploadFile" 
                    Class="nav-item menu-item"
                    ActiveClass="nav-item-active">
            Excel İçe Aktar
        </MudNavLink>
    </MudNavMenu>

    <!-- SİSTEM -->
    <div class="nav-section-title menu-title">SİSTEM</div>
    
    <MudNavMenu Dense="true" Class="nav-menu">
        <MudNavLink Href="/activity-logs" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.History" 
                    Class="nav-item menu-item"
                    ActiveClass="nav-item-active">
            Aktivite Logları
        </MudNavLink>
        
        <MudNavLink Href="/settings" 
                    Match="NavLinkMatch.Prefix" 
                    Icon="@Icons.Material.Filled.Settings" 
                    Class="nav-item menu-item"
                    ActiveClass="nav-item-active">
            Ayarlar
        </MudNavLink>
    </MudNavMenu>

    <!-- Footer Section -->
    <div class="nav-footer logout-section">
        <div class="nav-footer-link logout-link menu-item" @onclick="HandleLogoutClick">
            <MudIcon Icon="@Icons.Material.Filled.Logout" />
            <span>Çıkış Yap</span>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback OnLogout { get; set; }

    private async Task HandleLogoutClick()
    {
        await OnLogout.InvokeAsync();
    }
}

