@* Shared/ListPageLayout.razor - Ortak liste sayfasÄ± layout'u *@

<div class="list-page-root">
    @if (Header != null)
    {
        <div class="list-page-header">
            @Header
        </div>
    }

    @if (Stats != null)
    {
        <div class="list-page-stats">
            @Stats
        </div>
    }

    <div class="list-page-toolbar">
        <div class="list-page-toolbar-left">
            @ToolbarLeft
        </div>

        <div class="list-page-toolbar-right">
            @ToolbarRight
        </div>
    </div>

    @if (Tabs != null)
    {
        <div class="list-page-tabs">
            @Tabs
        </div>
    }

    <div class="list-page-body">
        @Body
    </div>
</div>

@code {
    [Parameter] public RenderFragment? Header { get; set; }
    [Parameter] public RenderFragment? Stats { get; set; }
    [Parameter] public RenderFragment? ToolbarLeft { get; set; }
    [Parameter] public RenderFragment? ToolbarRight { get; set; }
    [Parameter] public RenderFragment? Tabs { get; set; }
    [Parameter] public RenderFragment Body { get; set; } = default!;
}
