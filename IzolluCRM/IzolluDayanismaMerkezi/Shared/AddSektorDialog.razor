@inject ISnackbar Snackbar

<MudDialog Style="max-width: 400px;">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-2" Style="vertical-align: middle;" />
            Yeni Sektör Ekle
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudPaper Elevation="0" Class="pa-3" Style="background-color: #f8fafc; border-radius: 8px; border-left: 4px solid #667eea;">
            <MudTextField @bind-Value="_sektorAdi" 
                         Label="Sektör Adı" 
                         Variant="Variant.Outlined" 
                         Margin="Margin.Dense"
                         Required="true"
                         AutoFocus="true"
                         Placeholder="Örn: Teknoloji, Sağlık, Eğitim" />
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">İptal</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@string.IsNullOrWhiteSpace(_sektorAdi)">Ekle</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;

    private string _sektorAdi = string.Empty;

    private void Submit()
    {
        if (string.IsNullOrWhiteSpace(_sektorAdi))
        {
            Snackbar.Add("Lütfen sektör adı giriniz", Severity.Warning);
            return;
        }

        MudDialog.Close(DialogResult.Ok(_sektorAdi.Trim()));
    }

    private void Cancel() => MudDialog.Cancel();
}
