@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="_sektorAdi" 
                     Label="Sektör Adı" 
                     Variant="Variant.Outlined" 
                     Required="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">İptal</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Ekle</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;

    private string _sektorAdi = string.Empty;

    private void Submit()
    {
        if (string.IsNullOrWhiteSpace(_sektorAdi))
        {
            Snackbar.Add("Lütfen sektör adı giriniz", Severity.Warning);
            return;
        }

        MudDialog.Close(DialogResult.Ok(_sektorAdi.Trim()));
    }

    private void Cancel() => MudDialog.Cancel();
}
