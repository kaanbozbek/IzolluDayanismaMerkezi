@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<div style="background: radial-gradient(circle at top, #10b981 0%, #047857 35%, #065f46 100%); min-height: 100vh; margin: 0; padding: 0;">
    @Body
</div>

@code {
    private MudTheme _theme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#f59e0b",
            PrimaryDarken = "#ea580c",
            PrimaryLighten = "#fbbf24",
            Secondary = "#6b7280",
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#f59e0b",
        }
    };
}
