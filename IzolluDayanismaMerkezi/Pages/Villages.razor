@page "/villages"
@using IzolluVakfi.Data.Entities
@using IzolluVakfi.Services
@inject VillageService VillageService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<PageTitle>Köyler - İzollu Dayanışma Merkezi</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="mt-4">

    @* Statistics Cards *@
    <MudGrid Class="mb-4" Spacing="3">
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="2" Class="pa-4" Style="background: linear-gradient(135deg, #14b8a6 0%, #0d9488 100%); color: white; border-radius: 12px;">
                <div class="d-flex align-center justify-space-between">
                    <div>
                        <MudText Typo="Typo.h5" Style="font-weight: bold;">@_villages.Count</MudText>
                        <MudText Typo="Typo.body2" Style="opacity: 0.9;">Toplam Köy</MudText>
                    </div>
                    <MudIcon Icon="@Icons.Material.Outlined.LocationCity" Size="Size.Large" Style="opacity: 0.8;" />
                </div>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="2" Class="pa-4" Style="background: linear-gradient(135deg, #0d9488 0%, #0f766e 100%); color: white; border-radius: 12px;">
                <div class="d-flex align-center justify-space-between">
                    <div>
                        <MudText Typo="Typo.h5" Style="font-weight: bold;">@_totalPopulation.ToString("N0")</MudText>
                        <MudText Typo="Typo.body2" Style="opacity: 0.9;">Toplam Nüfus</MudText>
                    </div>
                    <MudIcon Icon="@Icons.Material.Outlined.People" Size="Size.Large" Style="opacity: 0.8;" />
                </div>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="2" Class="pa-4" Style="background: linear-gradient(135deg, #2dd4bf 0%, #14b8a6 100%); color: white; border-radius: 12px;">
                <div class="d-flex align-center justify-space-between">
                    <div>
                        <MudText Typo="Typo.h5" Style="font-weight: bold;">@_totalStudents.ToString("N0")</MudText>
                        <MudText Typo="Typo.body2" Style="opacity: 0.9;">Toplam Öğrenci</MudText>
                    </div>
                    <MudIcon Icon="@Icons.Material.Outlined.School" Size="Size.Large" Style="opacity: 0.8;" />
                </div>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="2" Class="pa-4" Style="background: linear-gradient(135deg, #5eead4 0%, #2dd4bf 100%); color: white; border-radius: 12px;">
                <div class="d-flex align-center justify-space-between">
                    <div>
                        <MudText Typo="Typo.h5" Style="font-weight: bold;">@_averagePopulation.ToString("N0")</MudText>
                        <MudText Typo="Typo.body2" Style="opacity: 0.9;">Ortalama Nüfus</MudText>
                    </div>
                    <MudIcon Icon="@Icons.Material.Outlined.BarChart" Size="Size.Large" Style="opacity: 0.8;" />
                </div>
            </MudPaper>
        </MudItem>
    </MudGrid>

    @* FILTER BAR *@
    <MudPaper Class="pa-3 mb-3" Elevation="1">
        <div class="d-flex align-center gap-3">
            <MudTextField @bind-Value="_searchString"
                          Label="Ara"
                          Placeholder="Köy adı, nüfus..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Immediate="true"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense"
                          Style="flex: 1; max-width: 400px;" />

            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="OpenAddDialog">
                Köy Ekle
            </MudButton>
        </div>
    </MudPaper>

    <MudTable Items="@_villages" Dense="true" Hover="true" Loading="@_loading" Filter="new Func<Village, bool>(FilterFunc)" SortLabel="Sırala">
        <ToolBarContent>
        </ToolBarContent>
        <HeaderContent>
            <MudTh><MudTableSortLabel SortBy="new Func<Village, object>(x => x.Ad)">Köy Adı</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<Village, object>(x => x.Nufus ?? 0)">Nüfus</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<Village, object>(x => x.IlkokulOgrenciSayisi ?? 0)">İlkokul</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<Village, object>(x => x.OrtaokulOgrenciSayisi ?? 0)">Ortaokul</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<Village, object>(x => x.LiseOgrenciSayisi ?? 0)">Lise</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<Village, object>(x => x.UniversiteOgrenciSayisi ?? 0)">Üniversite</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<Village, object>(x => (x.IlkokulOgrenciSayisi ?? 0) + (x.OrtaokulOgrenciSayisi ?? 0) + (x.LiseOgrenciSayisi ?? 0) + (x.UniversiteOgrenciSayisi ?? 0))">Toplam Öğrenci</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<Village, object>(x => x.MuhtarAdi ?? string.Empty)">Muhtar</MudTableSortLabel></MudTh>
            <MudTh>İşlemler</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Köy Adı">
                <MudLink Color="Color.Primary" OnClick="@(() => OpenEditDialog(context))">
                    <strong>@context.Ad</strong>
                </MudLink>
            </MudTd>
            <MudTd DataLabel="Nüfus">
                <MudChip T="string" Size="Size.Small" Color="Color.Info">
                    @(context.Nufus?.ToString("N0") ?? "-")
                </MudChip>
            </MudTd>
            <MudTd DataLabel="İlkokul">@(context.IlkokulOgrenciSayisi ?? 0)</MudTd>
            <MudTd DataLabel="Ortaokul">@(context.OrtaokulOgrenciSayisi ?? 0)</MudTd>
            <MudTd DataLabel="Lise">@(context.LiseOgrenciSayisi ?? 0)</MudTd>
            <MudTd DataLabel="Üniversite">@(context.UniversiteOgrenciSayisi ?? 0)</MudTd>
            <MudTd DataLabel="Toplam Öğrenci">
                <strong>
                    @((context.IlkokulOgrenciSayisi ?? 0) + 
                      (context.OrtaokulOgrenciSayisi ?? 0) + 
                      (context.LiseOgrenciSayisi ?? 0) + 
                      (context.UniversiteOgrenciSayisi ?? 0))
                </strong>
            </MudTd>
            <MudTd DataLabel="Muhtar">
                @if (!string.IsNullOrWhiteSpace(context.MuhtarAdi))
                {
                    <div>@context.MuhtarAdi</div>
                    @if (!string.IsNullOrWhiteSpace(context.MuhtarTelefon))
                    {
                        <small>@context.MuhtarTelefon</small>
                    }
                }
                else
                {
                    <span>-</span>
                }
            </MudTd>
            <MudTd DataLabel="İşlemler">
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" Color="Color.Primary" OnClick="@(() => OpenEditDialog(context))" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" Color="Color.Error" OnClick="@(() => DeleteVillage(context.Id))" />
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudContainer>

@code {
    private List<Village> _villages = new();
    private bool _loading = true;
    private string _searchString = "";
    private int _totalPopulation = 0;
    private int _totalStudents = 0;
    private int _averagePopulation = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        _loading = true;
        _villages = await VillageService.GetAllAsync();
        _totalPopulation = await VillageService.GetTotalPopulationAsync();
        _totalStudents = await VillageService.GetTotalStudentsAsync();
        _averagePopulation = _villages.Any() ? _totalPopulation / _villages.Count : 0;
        _loading = false;
    }

    private bool FilterFunc(Village village)
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;
        if (village.Ad.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (village.MuhtarAdi?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) == true)
            return true;
        return false;
    }

    private async Task OpenAddDialog()
    {
        var parameters = new DialogParameters 
        { 
            ["IsEdit"] = false,
            ["Village"] = new Village()
        };
        var options = new DialogOptions { MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<VillageDialog>("Yeni Köy Ekle", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            await LoadData();
            Snackbar.Add("Köy başarıyla eklendi.", Severity.Success);
        }
    }

    private async Task OpenEditDialog(Village village)
    {
        var parameters = new DialogParameters 
        { 
            ["IsEdit"] = true,
            ["Village"] = village
        };
        var options = new DialogOptions { MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<VillageDialog>("Köy Düzenle", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            await LoadData();
            Snackbar.Add("Köy başarıyla güncellendi.", Severity.Success);
        }
    }

    private async Task DeleteVillage(int id)
    {
        bool? result = await DialogService.ShowMessageBox(
            "Onayla",
            "Bu köyü silmek istediğinizden emin misiniz?",
            yesText: "Sil", cancelText: "İptal");

        if (result == true)
        {
            await VillageService.DeleteAsync(id);
            await LoadData();
            Snackbar.Add("Köy silindi.", Severity.Info);
        }
    }
}
