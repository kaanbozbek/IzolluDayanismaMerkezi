@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="login-background" style="min-height: 100vh; margin: 0; padding: 0; background: radial-gradient(circle at 20% 20%, rgba(255, 255, 255, 0.18) 0, rgba(255, 255, 255, 0) 40%), radial-gradient(circle at 80% 80%, rgba(0, 0, 0, 0.25) 0, rgba(0, 0, 0, 0.7) 60%), radial-gradient(circle at center, #FFC96B 0%, #FFB037 30%, #F28A00 65%, #C86A00 100%); background-attachment: fixed;">
    @Body
</div>

@code {
    private MudTheme _theme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#f59e0b",
            PrimaryDarken = "#ea580c",
            PrimaryLighten = "#fbbf24",
            Secondary = "#6b7280",
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#f59e0b",
        }
    };
}
